service firebase.storage {
  match /b/{bucket}/o {
    match /images/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    match /profile_banners/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    match /profile_images/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    match /room_images/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    match /spaxibot/{allPaths=**} {
      allow read, write;
    }
  }
}
